  { icon: icons.shieldCheck, title: t.home.feature_2_title, desc: t.home.feature_2_desc },
  { icon: icons.currencyDollar, title: t.home.feature_3_title, desc: t.home.feature_3_desc },
  { icon: icons.userCircle, title: t.home.feature_4_title, desc: t.home.feature_4_desc },
