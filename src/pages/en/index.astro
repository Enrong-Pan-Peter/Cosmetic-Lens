const steps = [
  { num: '1', text: t.home.step_1 },
  { num: '2', text: t.home.step_2 },
  { num: '3', text: t.home.step_3 },
];
---

<BaseLayout
  title={t.home.hero_title}
  description={t.site.description}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="py-16 md:py-24 lg:py-32">
    <div class="mx-auto max-w-5xl px-4 text-center sm:px-6 lg:px-8">
      <span class="inline-flex items-center gap-1.5 rounded-full border border-border px-3 py-1 text-sm font-medium text-foreground mb-6">
        <svg class="w-4 h-4" viewBox="0 0 256 256" fill="currentColor"><path d={icons.sparkle} /></svg>
        AI-Powered Ingredient Analysis
      </span>

      <h1 class="text-3xl font-semibold tracking-tight sm:text-4xl lg:text-5xl text-foreground">
        {t.home.hero_title}
      </h1>

      <p class="mt-6 text-lg text-muted-foreground max-w-2xl mx-auto sm:text-xl">
        {t.home.hero_subtitle}
      </p>

      <div class="mt-10 flex flex-col sm:flex-row gap-3 justify-center max-sm:items-center">
        <a
          href={`/${lang}/chat`}
          class="inline-flex items-center justify-center h-11 rounded-lg bg-primary px-8 text-base font-medium text-primary-foreground hover:bg-primary/90 transition-colors"
        >
          <svg class="w-4 h-4 mr-2" viewBox="0 0 256 256" fill="currentColor"><path d={icons.microscope} /></svg>
          {t.home.cta_analyze}
        </a>
        <a
          href={`/${lang}/glossary`}
          class="inline-flex items-center justify-center h-11 rounded-lg border border-input bg-background px-8 text-base font-medium text-foreground shadow-sm hover:bg-accent hover:text-accent-foreground transition-colors"
        >
          <svg class="w-4 h-4 mr-2" viewBox="0 0 256 256" fill="currentColor"><path d={icons.bookOpen} /></svg>
          {t.home.cta_learn}
        </a>
      </div>
    </div>
  </section>

  <div class="gradient-divider"></div>

  <!-- Features Section -->
  <section class="py-16 md:py-20 lg:py-24">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 sm:mb-16">
        <h2 class="text-2xl font-semibold sm:text-3xl lg:text-4xl text-foreground">
          {t.home.features_title}
        </h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {features.map(f => (
          <div class="flex flex-col gap-4 rounded-xl border border-border bg-card p-6 shadow-sm transition-shadow hover:shadow-md">
            <div class="flex h-10 w-10 items-center justify-center rounded-lg bg-primary/10 text-primary">
              <svg class="w-5 h-5" viewBox="0 0 256 256" fill="currentColor"><path d={f.icon} /></svg>
            </div>
            <div>
              <h3 class="font-semibold text-card-foreground mb-1">{f.title}</h3>
              <p class="text-sm text-muted-foreground">{f.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <div class="gradient-divider"></div>

  <!-- How It Works Section -->
  <section class="py-16 md:py-20 lg:py-24">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 sm:mb-16">
        <h2 class="text-2xl font-semibold sm:text-3xl lg:text-4xl text-foreground">
          {t.home.how_it_works}
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {steps.map(step => (
          <div class="text-center">
            <div class="mx-auto mb-4 flex h-14 w-14 items-center justify-center rounded-full border-2 border-border bg-secondary">
              <span class="text-lg font-semibold text-secondary-foreground">{step.num}</span>
            </div>
            <p class="text-muted-foreground">{step.text}</p>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <a
          href={`/${lang}/chat`}
          class="inline-flex items-center justify-center h-11 rounded-lg bg-primary px-8 text-base font-medium text-primary-foreground hover:bg-primary/90 transition-colors"
        >
          {t.home.cta_analyze}
          <svg class="w-4 h-4 ml-2" viewBox="0 0 256 256" fill="currentColor"><path d={icons.arrowRight} /></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-primary py-12 sm:py-16 lg:py-20">
    <div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between gap-6 max-lg:flex-col max-lg:text-center">
        <div class="space-y-3">
          <h2 class="text-2xl font-semibold text-primary-foreground sm:text-3xl lg:text-4xl">
            Know What's In Your Products
          </h2>
          <p class="text-primary-foreground/70 text-lg">
            Start your first ingredient analysis in seconds.
          </p>
        </div>
        <a
          href={`/${lang}/chat`}
          class="shrink-0 inline-flex items-center justify-center h-11 rounded-lg bg-secondary px-8 text-base font-medium text-secondary-foreground hover:bg-secondary/80 transition-colors"
        >
          {t.home.cta_analyze}
          <svg class="w-4 h-4 ml-2" viewBox="0 0 256 256" fill="currentColor"><path d={icons.arrowRight} /></svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
