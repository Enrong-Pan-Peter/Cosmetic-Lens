---
import LanguageSwitcher from './LanguageSwitcher.jsx';
import { getTranslations } from '../../i18n/utils';

export interface Props {
  lang: 'en' | 'zh';
}

const { lang } = Astro.props;
const t = getTranslations(lang);
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: `/${lang}/`, label: t.nav.home },
  { href: `/${lang}/chat`, label: t.nav.analyze },
  { href: `/${lang}/glossary`, label: t.nav.glossary },
  { href: `/${lang}/education`, label: t.nav.education },
];
---

<header class="bg-background sticky top-0 z-50">
  <div class="mx-auto flex h-16 max-w-5xl items-center justify-between gap-6 px-4 sm:px-6 lg:px-8">
    <!-- Logo -->
    <a href={`/${lang}/`} class="flex items-center gap-2.5 group">
      <svg class="w-5 h-5 text-primary" viewBox="0 0 256 256" fill="currentColor"><path d="M224,208H203.94A88.05,88.05,0,0,0,144,64.37V32a16,16,0,0,0-16-16H80A16,16,0,0,0,64,32V136a16,16,0,0,0,16,16h48a16,16,0,0,0,16-16V80.46A72,72,0,0,1,181.25,208H32a8,8,0,0,0,0,16H224a8,8,0,0,0,0-16Zm-96-72H80V32h48V136ZM72,184a8,8,0,0,1,0-16h64a8,8,0,0,1,0,16Z" /></svg>
      <span class="font-semibold text-lg text-foreground tracking-tight">
        {lang === 'zh' ? '成分透视' : 'CosmeticLens'}
      </span>
    </a>

    <!-- Desktop Navigation -->
    <nav class="hidden md:flex items-center gap-8 lg:gap-10">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`text-base font-medium transition-colors ${
            currentPath === link.href
              ? 'text-foreground'
              : 'text-muted-foreground hover:text-foreground'
          }`}
        >
          {link.label}
        </a>
      ))}
    </nav>

    <!-- Right side: Auth + Language + Mobile -->
    <div class="flex items-center gap-3">
      <LanguageSwitcher client:load lang={lang} currentPath={currentPath} />

      <!-- Auth buttons (shown when logged out) -->
      <div id="auth-buttons" class="hidden items-center gap-2">
        <a
          href={`/${lang}/login`}
          class="text-sm font-medium text-muted-foreground hover:text-foreground transition-colors px-3 py-1.5"
        >
          {t.nav.login}
        </a>
        <a
          href={`/${lang}/signup`}
          class="text-sm font-medium bg-primary text-primary-foreground px-4 py-1.5 rounded-lg hover:bg-primary/90 transition-colors"
        >
          {t.nav.signup}
        </a>
      </div>

      <!-- Profile dropdown (shown when logged in) -->
      <div id="profile-menu" class="hidden relative">
        <button
          id="profile-button"
          class="flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-foreground px-2 py-1.5 rounded-lg hover:bg-accent transition-colors"
        >
          <span class="w-7 h-7 bg-primary/10 rounded-full flex items-center justify-center">
            <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </span>
          <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>
        <div id="profile-dropdown" class="hidden absolute right-0 mt-2 w-48 bg-background rounded-lg shadow-lg border border-border z-50 py-1">
          <a
            href={`/${lang}/profile`}
            class="block px-4 py-2 text-sm text-foreground hover:bg-accent transition-colors"
          >
            {t.nav.profile}
          </a>
          <a
            href={`/${lang}/history`}
            class="block px-4 py-2 text-sm text-foreground hover:bg-accent transition-colors"
          >
            {t.nav.history}
          </a>
          <div class="border-t border-border my-1"></div>
          <button
            id="logout-button"
            class="w-full text-left px-4 py-2 text-sm text-destructive hover:bg-accent transition-colors"
          >
            {t.nav.logout}
          </button>
        </div>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden inline-flex items-center justify-center h-9 w-9 rounded-md border border-input bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
        aria-label="Toggle menu"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Gradient divider line -->
  <div class="gradient-divider"></div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="hidden md:hidden border-b border-border bg-background">
    <div class="mx-auto max-w-5xl px-4 py-3 space-y-1">
      {navLinks.map(link => (
        <a
          href={link.href}
          class={`block rounded-md px-3 py-2 text-base font-medium transition-colors ${
            currentPath === link.href
              ? 'bg-accent text-accent-foreground'
              : 'text-muted-foreground hover:bg-accent hover:text-accent-foreground'
          }`}
        >
          {link.label}
        </a>
      ))}
      <div class="border-t border-border my-2 pt-2">
        <div id="mobile-auth-buttons">
          <a
            href={`/${lang}/login`}
            class="block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground"
          >
            {t.nav.login}
          </a>
          <a
            href={`/${lang}/signup`}
            class="block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground"
          >
            {t.nav.signup}
          </a>
        </div>
        <div id="mobile-profile-links" class="hidden">
          <a
            href={`/${lang}/profile`}
            class="block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground"
          >
            {t.nav.profile}
          </a>
          <a
            href={`/${lang}/history`}
            class="block rounded-md px-3 py-2 text-base font-medium text-muted-foreground hover:bg-accent hover:text-accent-foreground"
          >
            {t.nav.history}
          </a>
          <button
            id="mobile-logout-button"
            class="block w-full text-left rounded-md px-3 py-2 text-base font-medium text-destructive hover:bg-accent"
          >
            {t.nav.logout}
          </button>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  import { supabase } from '../../lib/supabase';

  async function updateAuthUI() {
    try {
      const { data: { session } } = await supabase.auth.getSession();
      const authButtons = document.getElementById('auth-buttons');
      const profileMenu = document.getElementById('profile-menu');
      const mobileAuth = document.getElementById('mobile-auth-buttons');
      const mobileProfile = document.getElementById('mobile-profile-links');

      if (session) {
        authButtons?.classList.add('hidden');
        authButtons?.classList.remove('md:flex');
        profileMenu?.classList.remove('hidden');
        mobileAuth?.classList.add('hidden');
        mobileProfile?.classList.remove('hidden');
      } else {
        authButtons?.classList.remove('hidden');
        authButtons?.classList.add('md:flex');
        profileMenu?.classList.add('hidden');
        mobileAuth?.classList.remove('hidden');
        mobileProfile?.classList.add('hidden');
      }
    } catch {
      // Supabase not configured yet — show auth buttons by default
    }
  }

  // Profile dropdown toggle
  document.getElementById('profile-button')?.addEventListener('click', () => {
    document.getElementById('profile-dropdown')?.classList.toggle('hidden');
  });

  // Close dropdown on outside click
  document.addEventListener('click', (e) => {
    const profileMenu = document.getElementById('profile-menu');
    const dropdown = document.getElementById('profile-dropdown');
    if (profileMenu && dropdown && !profileMenu.contains(e.target as Node)) {
      dropdown.classList.add('hidden');
    }
  });

  // Logout handler
  async function handleLogout() {
    await supabase.auth.signOut();
    const lang = document.documentElement.lang === 'zh-CN' ? 'zh' : 'en';
    window.location.href = `/${lang}/`;
  }

  document.getElementById('logout-button')?.addEventListener('click', handleLogout);
  document.getElementById('mobile-logout-button')?.addEventListener('click', handleLogout);

  // Mobile menu toggle
  document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    document.getElementById('mobile-menu')?.classList.toggle('hidden');
  });

  updateAuthUI();

  supabase.auth.onAuthStateChange(() => {
    updateAuthUI();
  });
</script>
